<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.













    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="generalBottomLayout">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/superLightGray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
    </style>

    <style name="positiveButton" parent="@style/generalBottomLayout">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@xml/btn_blue_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="naturalButton" parent="@style/positiveButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@xml/btn_white_selector</item>
    </style>

    <style name="DialogText.Button" parent="@style/naturalButton">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginTop">3.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:layout_marginBottom">3.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="DialogText">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogText.Title" parent="@style/DialogText">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogText.Body" parent="@style/DialogText">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/dialogBodyTextColor</item>
    </style>

</resources>